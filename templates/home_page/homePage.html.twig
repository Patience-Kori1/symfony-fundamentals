{% extends 'base.html.twig' %}

{% block title %} Page d'accueil {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenue sur la page d'accueil !</h1>

    {% for message in app.flashes('success')%}
        <div class="alert">
            {{message}}
        </div>
    {% endfor %}
    {% for message in app.flashes('notice')%}
        <div class="alert">
            {{message}}
        </div>
    {% endfor %}

   <h2>Liste des données en BDD :</h2>
        <table class="table table-bordered table-striped">
            <thead>    
                <tr class="table-primary">
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Conten</th>
                    <th scope="col">Action</th>
                </tr>
            </thead> 
            <tbody>
                {% for data in datas %}
                    <tr>
                        <th scope="row" >{{data.id}}</th>
                        <td>{{data.title}}</td>
                        <td>{{data.content}}</td>
                        <td>
                            <a href="{{ path('app_update_form', {'id' : data.id})}}" class="btn btn-sm btn-warning" >Modifier</a> 
                            <a  {#href="{{ path('delete', {'id' : data.id})}}"#} class="btn btn-sm btn-danger">Supprimer</a>
                        </td>
                    </tr>
                {% else %}
                    <p class="text-muted">Aucune donnée enregistrée pour le moment.</p>
                {% endfor %}
                
            </tbody>
        </table> 
</div>
{% endblock %}
